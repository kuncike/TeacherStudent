
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}


.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 40rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  display: flex;
  flex-direction: row;
  background-color: white;
  border-radius: 30rpx;
}
.nickname{
    color: #1E90FF;
    font-size: 15pt;
    height: 100%;
   padding-top:90rpx ;
}

.userinfo-nickname::after {
  border: none;
}
.nones{
  font-size: 15pt;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 45%;
  align-self:center;
  color: #DCDCDC;
}
.top{
  width: 100%;
  height: 100rpx;
  color: #202427;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13pt;
  background-color: #d6d4d4;
}



input{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 80%;
}
.in{
  display: flex;
  flex-direction: row;
  border-bottom: 5rpx solid #ccc;
}
text{
  width: 20%;
   font-size: 13pt;
   height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}